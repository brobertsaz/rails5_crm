.row
  .col-md-offset-4.col-md-4
    = bootstrap_devise_error_messages!
    .panel.panel-default.devise-bs
      .panel-heading
        %h4= t('.sign_up', default: 'Sign up')
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f|
          = f.input :email, autofocus: true
          = f.input :first_name
          = f.input :last_name
          = f.input :company, label: 'Company Name'
          = f.input :phone
          = f.input :password
          = f.input :password_confirmation
          = f.button :submit, t('.sign_up', default: 'Sign up'), class: 'btn btn-primary'
    = render 'devise/shared/links'
